<h1>Available Flats (<%= @flats.count %>)</h1>

<div class="d-flex justify-content-end mb-3">
  <%= link_to 'Add a Flat', new_flat_path, class: 'btn btn-success me-3' %>
</div>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.description %></p>
            <p class="card-text"><small class="text-muted">Address: <%= flat.address %></small></p>
            <div class="mt-auto">
              <div class="d-flex justify-content-between">
                <p class="card-text mb-0">
                  <i class="fas fa-users"></i> <%= flat.number_of_guests %>
                </p>
                <p class="card-text mb-0">
                  <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
                </p>
              </div>
            </div>
          </div>
          <div class="card-footer d-flex justify-content-between">
            <div class="d-flex">
              <%= link_to 'View Details', flat_path(flat), class: 'btn btn-primary me-2' %>
              <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-warning me-2' %>
            </div>
            <%= link_to 'Delete', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
