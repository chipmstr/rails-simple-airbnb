<div class="container d-flex flex-column justify-content-center" style="min-height: 80vh; margin-top: 50px;">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <!-- full card frame for the entire content -->
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <!-- dynamic flat name and address -->
          <h1 class="display-4 mb-3"><%= @flat.name %></h1>
          <p class="text-muted mb-4"><%= @flat.address %></p>

          <div class="row">
            <div class="col-md-8">
              <!-- description section with subtle background color -->
              <div class="bg-light p-4 rounded">
                <h5 class="card-title">A bit more about this flat...</h5>
                <p class="card-text mb-4"><%= @flat.description %></p>
                <p class="card-text text-muted"><small>make yourself at home in this spacious flat.</small></p>
              </div>
            </div>

            <div class="col-md-4">
              <!-- booking form with a light background -->
              <div class="card bg-light shadow-sm mb-4">
                <div class="card-body">
                  <h5 class="card-title">Book this place!</h5>
                  <form>
                    <div class="form-group mb-3">
                      <label for="from">From:</label>
                      <input type="date" id="from" class="form-control">
                    </div>
                    <div class="form-group mb-3">
                      <label for="to">To:</label>
                      <input type="date" id="to" class="form-control">
                    </div>
                    <button class="btn btn-success w-100">Book</button>
                  </form>
                </div>
              </div>

              <!-- details section with colored background -->
              <div class="card shadow-sm mb-4">
                <div class="card-body bg-primary text-white rounded">
                  <h5 class="card-title">Details</h5>
                  <p class="card-text mb-3">
                    <i class="fas fa-users"></i> <%= @flat.number_of_guests %> guests
                  </p>
                  <p class="card-text">
                    <i class="fas fa-euro-sign"></i> â‚¬<%= @flat.price_per_night %> per night
                  </p>
                </div>
              </div>

              <!-- share buttons section -->
              <div class="mt-4">
                <h5>Share</h5>
                <button class="btn btn-outline-secondary me-2"><i class="fab fa-facebook-f"></i></button>
                <button class="btn btn-outline-secondary me-2"><i class="fab fa-twitter"></i></button>
                <button class="btn btn-outline-secondary me-2"><i class="fab fa-pinterest"></i></button>
                <button class="btn btn-outline-secondary"><i class="fas fa-envelope"></i></button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- back to flats button -->
      <div class="mt-4 text-center">
        <%= link_to 'Back to Flats', flats_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
